@model PRN222_Beverage_Website_Project.ModelViews.ProductViewModel

@{
    Layout = "~/Views/Shared/SaleLayout.cshtml";
    ViewBag.Title = "Thêm Mới Sản Phẩm";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Create" asp-controller="Product" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Tên sản phẩm</label>
        <input asp-for="ProductName" class="form-control" />
        <span class="text-danger" asp-validation-for="ProductName"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Mô tả sản phẩm</label>
        <textarea asp-for="ProductDescription" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="ProductDescription"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Hình ảnh sản phẩm</label>
        <img id="previewImage" src="" style="max-width: 100px; margin-top: 10px; display: block;">
        <input type="file" id="productImageFile" name="productImageFile" class="form-control" />
        <span class="text-danger">@ViewData["ImageError"]</span>
        <span asp-validation-for="ProductImage" class="text-danger"></span>
    </div>

    <h4>Thêm biến thể sản phẩm</h4>

    <div id="variant-container" class="row">
        @if (Model.ProductVariants.Any())
        {
            for (int i = 0; i < Model.ProductVariants.Count; i++)
            {
                <div class="col-md-4 variant-item">
                    <label>Giá biến thể</label>
                    <input name="ProductVariants[@i].ProductVariantPrice" class="form-control" type="number" step="0.01"
                           value="@Model.ProductVariants[i].ProductVariantPrice" />
                    <span class="text-danger" asp-validation-for="ProductVariants[i].ProductVariantPrice"></span>

                    <label>Kích thước</label>
                    <select name="ProductVariants[@i].ProductSizeId" class="form-control">
                        @foreach (var size in Model.ProductSizes)
                        {
                            <option value="@size.Value" selected="@(Convert.ToInt32(size.Value) == Model.ProductVariants[i].ProductSizeId ? "selected" : null)">
                                @size.Text
                            </option>
                        }
                    </select>
                    <span class="text-danger" asp-validation-for="ProductVariants[i].ProductSizeId"></span>

                    <button type="button" class="btn btn-danger remove-variant mt-2">Xóa</button>
                </div>
            }
        }
    </div>

    <button type="button" id="add-variant" class="btn btn-primary mt-3">Thêm biến thể</button>

    <div class="mt-4">
        <button type="submit" class="btn btn-success">Thêm mới</button>
    </div>
</form>

@section Scripts {
    <!-- Load jQuery trước -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("productImageFile").addEventListener("change", function(event) {
                const file = event.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const img = document.getElementById("previewImage");
                        img.src = e.target.result;
                        img.style.display = "block";
                    };
                    reader.readAsDataURL(file);
                }
            });
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let variantIndex = document.querySelectorAll(".variant-item").length || 0;

            document.getElementById("add-variant").addEventListener("click", function () {
                let container = document.getElementById("variant-container");

                let html = `
                    <div class="variant-item col-md-4">
                        <label>Giá biến thể</label>
                        <input name="ProductVariants[${variantIndex}].ProductVariantPrice" class="form-control" type="number" step="0.01" required />

                        <label>Kích thước</label>
                        <select name="ProductVariants[${variantIndex}].ProductSizeId" class="form-control" required>
                            @foreach (var size in Model.ProductSizes)
                            {
                                @Html.Raw($"<option value='{size.Value}'>{size.Text}</option>")
                            }
                        </select>

                        <button type="button" class="btn btn-danger remove-variant mt-2">Xóa</button>
                    </div>
                `;

                container.insertAdjacentHTML("beforeend", html);
                variantIndex++;

                attachRemoveEvent();
            });

            function attachRemoveEvent() {
                document.querySelectorAll(".remove-variant").forEach(button => {
                    button.addEventListener("click", function () {
                        this.parentElement.remove();
                    });
                });
            }

            attachRemoveEvent();
        });
    </script>

    @* Kích hoạt Validation Client-Side *@
    <partial name="_ValidationScriptsPartial" />
}
